#!/usr/bin/env node

var path = require("path");
var parseArgs = require("minimist");
var pipeline = require("../lib/pipeline");

var args = parseArgs(process.argv.slice(2), {
    "boolean": ["v", "verbose", "c", "clean"],
    "string": ["f", "filter", "m", "manifestFormat"]
});

var cwd = process.cwd();
var sourceDir = cwd;

if (args._.length >= 1) {
    sourceDir = path.resolve(cwd, args._[0]);
}

var targetDir = sourceDir;

if (args._.length >= 2) {
    targetDir = path.resolve(cwd, args._[1]);
}

var options = {
    logger: (args.v || args.verbose) ? console.log : null,
    filter: args.f || args.filter || null,
    manifestFormat: args.m || args.manifestFormat
};

if (args.c || args.clean || false) {
    pipeline.clean(sourceDir, options);
} else {
    pipeline.processDirectory(sourceDir, targetDir, options);
}